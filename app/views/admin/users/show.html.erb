<div class="record_view">
<p>
  <em>Voter ID</em>
  <%=h @user.voter_id.upcase %>
</p>
<p>
  <em>Name</em>
  <%=h format_name @user %>
</p>
<p>
  <em>Address</em>
  <%= format_address @user.complete_address %>
</p>
<p>
  <em>Birthdate</em>
  <%=h @user.birth_date %>
</p>
<p>
  <em>Email Address</em>
  <%=h @user.email %>
</p>
<p>
  <%= "Activated" if @user.activated %>
  <%= "Voted" if @user.voted %>
</p>
</div>
<div class="record_controls">
<p>
  <%= link_to 'Edit', edit_admin_user_path(@user) %>
  <%= link_to 'Remove', admin_user_path(@user), :confirm => 'Are you sure you want to unregister this voter?', :method => :delete %>
</p>
<p>
  <%= link_to 'Previous', admin_user_path(@user.id - 1) unless @user.eql?(User.first) %>
  <%= link_to 'Next', admin_user_path(@user.id + 1) unless @user.eql?(User.last) %>
</p>
<p>
  <%= link_to 'Back to Index', admin_users_path %>
</p>
</div>
