<p id="election_status">
  <%= render :partial => 'election_status' %>
</p>

<div class="admin_panel grid_4">
  <% if APP_CONFIG['election_status'].eql?('close') %>
    <%= link_to 'Register Voter', new_admin_user_path  %>
  <% else %>
    <%= content_tag :div, 'Register Voter', :class => 'disabled' %>
  <% end %>

  <% unless User.count.zero? %>
    <%= link_to 'View List of Voters', admin_users_path %>
    <% link_to(admin_user_path(User.first)) do %>
      Search for Voter
      <input id="voter_id" type="text" value="Voter ID" />
    <% end %>
  <% else %>
    <%= content_tag :div, 'View List of Voters', :class => 'disabled' %>
    <%= content_tag :div, 'Search for Voter', :class => 'disabled' %>
  <% end %>
</div>

<div class="admin_panel grid_4">
  <%= link_to 'View List of Candidates', candidates_path %>
  <%= content_tag :div, 'View Ballot Form', :class => 'disabled' %>
  <%= content_tag :div, 'View Election Statistics', :class => 'disabled' %>
</div>

<div class="admin_panel grid_4">
  <%= display_admin_dashboard_panel %>
</div>

