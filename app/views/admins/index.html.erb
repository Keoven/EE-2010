<% unless @admins.empty? %>
<table class="record_list">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email Address</th>
      <th>Password</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
    <tr>
      <td><%=h admin.login %></td>
      <td><%=h admin.email %></td>
      <td><%=h truncate(@admin.crypted_password, :length => 20) %></td>
      <td><%= link_to 'Show', admin_path(admin) %></td>
      <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
      <td><%= link_to 'Remove', admin_path(admin), :method => :delete, :confirm => 'Are you sure you want to unregister this voter?' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  No voters registered.
<% end %>
<ul class="record_summary">
  <li class="grid_4">
    <em>Total administrating</em>
    <%= @admins.count %>
  </li>
</ul>
<%= link_to 'Create New Administrator', new_admin_path %>
