<% user_province = "Metro Manila" %>
<div style="text-align:center">
  <h2>Official Ballot</h2>
  <h1>Presidents</h1>CHOOSE NOT MORE THAN ONE(1)<br /><br />
<table><% i=1 %>
<% Candidate.get_candidates("President", nil).each do |candidate| %>
<%= show_candidates(candidate, i, "President") %>
<% i+=1 %>
<% end %>
</table>
<h1>Vice Presidents</h1>CHOOSE NOT MORE THAN ONE(1)<br /><br />
<table><% i=1 %>
<% Candidate.get_candidates("Vice President", nil).each do |candidate| %>
<%= show_candidates(candidate, i, "Vice President") %>
<% i+=1 %>
<% end %>
</table>
<h1>Senators</h1>CHOOSE NOT MORE THAN TWELVE(12)<br /><br />
<table><% i=1 %>
<% Candidate.get_candidates("Senator", nil).each do |candidate| %>
<%= show_multiple_candidates(candidate, i, "Senator") %>
<% i+=1 %>
<% end %>
</table>
<% unless user_province == "Metro Manila" %>
<h1>Governor</h1>CHOOSE NOT MORE THAN ONE(1)<br /><br />
<table><% i=1 %>
