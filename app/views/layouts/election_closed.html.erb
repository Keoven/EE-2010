<% end %>
</table>
<h1>Vice Governor</h1>CHOOSE NOT MORE THAN ONE(1)<br /><br />
<table><% i=1 %>
<% Candidate.get_candidates("Vice Governor", user_province).each do |candidate| %>
<%= show_candidates(candidate, i, "Vice Governor") %>
<% i+=1 %>
<% end %>
</table>
<% end %>
<h1>Mayor</h1>CHOOSE NOT MORE THAN ONE(1)<br /><br />
<table><% i=1 %>
<% Candidate.get_candidates("Mayor", user_province).each do |candidate| %>
<%= show_candidates(candidate, i, "Mayor") %>
<% i+=1 %>
<% end %>
</table>
</div>